#!/bin/bash
set -e

create_db() {
  exec /app/manage.py database create_tables
}

init_photic() {
  echo "Ensuring admin user is initialized"
  exec /app/manage.py user list
  if [ "$?" -ne 0 ]; then
    exec /app/manage.py user create_root "$REDASH_ADMIN_EMAIL" "$REDASH_ADMIN_USERNAME" --password "$REDASH_ADMIN_PASSWORD"
  fi

  echo "Ensuring URL datasource(s) are initialized"
  exec /app/manage.py ds list --name "Ledger API"
  if [ "$?" -ne 0 ]; then
    exec /app/manage.py ds new "Ledger API" --type "url" --options "{ \"asynchronous\": false, \"url\": \"$KALEIDO_BASE_URL\" }"
  fi

  echo "Ensuring cloudwatch datasource(s) are initialized"
  exec /app/manage.py ds list --name "Devops Stream"
  if [ "$?" -ne 0 ]; then
    exec /app/manage.py ds new "Devops Stream" --type "cloudwatch" --options "{ \"id\": \"$ANALYTICS_ACCESS_KEY_ID\", \"key\": \"$ANALYTICS_SECRET_ACCESS_KEY\" \"namespaces\": \"k8s-netplane-$ENV\", \"region\": \"$REGION\" }"
  fi
}

worker() {
  WORKERS_COUNT=${WORKERS_COUNT:-2}
  QUEUES=${QUEUES:-queries,scheduled_queries,celery}

  echo "Starting $WORKERS_COUNT workers for queues: $QUEUES..."
  exec /usr/local/bin/celery worker --app=redash.worker -c$WORKERS_COUNT -Q$QUEUES -linfo --maxtasksperchild=10 -Ofair
}

scheduler() {
  WORKERS_COUNT=${WORKERS_COUNT:-1}
  QUEUES=${QUEUES:-celery}

  echo "Starting scheduler and $WORKERS_COUNT workers for queues: $QUEUES..."
  exec /usr/local/bin/celery worker --app=redash.worker --beat -c$WORKERS_COUNT -Q$QUEUES -linfo --maxtasksperchild=10 -Ofair
}

server() {
  WEB_WORKERS_COUNT=${REDASH_WEB_WORKERS:-4}

  echo "Starting web server with $WEB_WORKERS_COUNT"
  exec /usr/local/bin/gunicorn -b 0.0.0.0:5000 --name redash -w$WEB_WORKERS_COUNT redash.wsgi:app
}

help() {
  echo "Redash Docker"
  echo ""
  echo "Usage:"
  echo ""

  echo "server -- start Redash server (with gunicorn)"
  echo "worker -- start Celery worker"
  echo "scheduler -- start Celery worker with a beat (scheduler) process"
  echo ""
  echo "shell -- open shell"
  echo "dev_server -- start Flask development server with debugger and auto reload"
  echo "create_db -- create database tables"
  echo "manage -- CLI to manage redash"
  echo "tests -- run tests"
}

tests() {
  export REDASH_DATABASE_URL="postgresql://postgres@postgres/tests"

  if [ $# -eq 0 ]; then
    TEST_ARGS=tests/
  else
    TEST_ARGS=$@
  fi
  exec pytest $TEST_ARGS
}

case "$1" in
  worker)
    shift
    worker
    ;;
  server)
    shift
    server
    ;;
  scheduler)
    shift
    scheduler
    ;;
  dev_server)
    export FLASK_DEBUG=1
    exec /app/manage.py runserver --debugger --reload -h 0.0.0.0
    ;;
  shell)
    exec /app/manage.py shell
    ;;
  create_db)
    create_db
    ;;
  manage)
    shift
    exec /app/manage.py $*
    ;;
  tests)
    shift
    tests $@
    ;;
  help)
    shift
    help
    ;;
  *)
    exec "$@"
    ;;
esac

